syntax = "v1"

type Base {
	Success bool   `json:"success"`
	Msg     string `json:"msg"`
}

type Article {
	Id      int64  `json:"id"`
	Type    string `json:"type"`
	Content string `json:"content"`
	Author  string `json:"author"`
}

type GetArticleReq {
	Id int64 `path:"id"`
}

// 定义一个名称为 user 的服务
service art {
	// 定义 http.HandleFunc 转换的 go 文件名称及方法，每个接口都会跟一个 handler
	@doc "用户信息相关"
	@handler article
	get /article/:id (GetArticleReq) returns (Article)
}